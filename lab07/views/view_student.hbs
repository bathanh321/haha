<div class="container col-md-6 card bg-success">

    <h1 class="text text-primary">Add new student</h1>
    <table class="table table-danger">
        <tr>
            <th>Name</th>
            <td>{{student.name}}</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>{{ dateFormat student.dob "DD/MM/YYYY"}}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{student.email}}</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>{{student.gender}}
            </td>
        </tr>
        <tr>
            <th>Student year</th>
            <td>{{student.year}}</td>
        </tr>
        <tr>
            <th>Major</th>
            <td>
                {{student.major}}
            </td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{student.image}}</td>
        </tr>
        
    </table>

</div>